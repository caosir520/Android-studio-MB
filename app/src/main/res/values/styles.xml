<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/white</item>

        <item name="dayNightBackground">@color/day_backgroup_color</item>
        <item name="dayNightOneTextColor">@color/day_one_text_color</item>
        <item name="dayNightTwoTextColor">@color/day_two_text_color</item>
        <item name="dayNightThreeTextColor">@color/day_three_text_color</item>
        <item name="dayNightBackgroundDrawable">@color/day_backgroup_color</item>



    </style>

    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
   <!--输入反馈的样式-->
    <style name="EditText_fankui">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="mainRadioButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--正文的样式-->
    <style name="title_text">
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name=" android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>



    <style name="fuzhu_text">
        <item name="android:textColor">@color/futext_color</item>
        <item name="android:textSize">@dimen/text_size_4</item>
        <item name=" android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditText_fankui.title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_marginTop">@dimen/y30</item>
    </style>

    <style name="order_im">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
    </style>
    <!--分隔符的样式-->
    <style name="view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/cut_off_color</item>
        <item name="android:layout_marginLeft">@dimen/x18</item>
        <item name="android:layout_marginRight">@dimen/x18</item>
    </style>

    <style name="EditText_fankui.text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>



    <style name="InputGroupCodeViewNumber" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="InputGroupCodeViewLine" parent="AppTheme">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/fuzhu_text_color</item>
    </style>

    <style name="Text_Head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_2</item>
        <item name="android:layout_marginBottom">@dimen/y40</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:layout_marginTop">@dimen/y40</item>
    </style>
</resources>
